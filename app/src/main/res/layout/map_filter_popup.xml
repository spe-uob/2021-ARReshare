<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="440dp"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Results"
            android:layout_gravity="top"
            android:padding="20dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:layout_gravity="top|center"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="14dp"/>

            <SeekBar
                android:id="@+id/mapDistanceBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/mapDistanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="X metres away"
                android:textSize="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="240dp"
            android:layout_gravity="top|center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/mapFilterCategoryChipGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.google.android.material.chip.ChipGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/mapFilterCancel"
                android:layout_width="132dp"
                android:layout_height="40dp"
                android:text="Cancel"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/mapFilterConfirm"
                android:layout_width="132dp"
                android:layout_height="40dp"
                android:text="Filter"
                android:textSize="14dp"/>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>